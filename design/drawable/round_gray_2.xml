<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>
            <!-- set the shadow2 color here -->
            <stroke
                android:width="0dp"
                android:color="#77c9c9c9" />

            <!-- setting the thickness of shadow2 (positive value will give shadow2 on that side) -->

            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="#f2f2f2" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>