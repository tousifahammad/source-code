<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    tools:context=".main.MainActivity">

    <TextView
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="coroutine"
        android:padding="5dp"
        android:text="Coroutine"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/button7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="flow"
        android:padding="5dp"
        android:text="Flow"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="openFab"
        android:padding="5dp"
        android:text="FAB"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="generic"
        android:padding="5dp"
        android:text="Generic"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="movies"
        android:padding="5dp"
        android:text="Movies"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/button6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="motion"
        android:padding="5dp"
        android:text="Motion"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/buttonRoom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="room"
        android:padding="5dp"
        android:text="Room DB"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/buttonRealm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_dark_background"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="realmRecyclerView"
        android:padding="5dp"
        android:text="Realm recycler view"
        android:textColor="@color/white" />

</LinearLayout>