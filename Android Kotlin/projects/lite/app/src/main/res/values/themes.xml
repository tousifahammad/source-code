<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TishaLite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- i.e. Edit text cursor color -->
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
        <!-- i.e. Ripple effect color -->
        <!-- <item name="android:colorControlHighlight">@color/colorControlHighlight</item>-->
        <item name="android:colorControlHighlight">@color/LightGrey</item>
    </style>

    <style name="ColdStart" parent="Theme.TishaLite">
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_backgroud</item>
    </style>
</resources>